<p id="notice"><%= notice %></p>

<div class="bg-light">

  <p>
    <strong>Heading:</strong>
    <%= @category.heading %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @category.body %>
  </p>

  <p>
    <strong>Display:</strong>
    <%= @category.display %>
  </p>

  <p><strong>List of Products:</strong>
    <ul>
      <% @category.products.each do |product| %>
        <li><%= product.name %></li>
      <% end %>
    </ul>

  <%= link_to 'Edit', edit_category_path(@category) %> |
  <%= link_to 'Back', categories_path %>

</div>